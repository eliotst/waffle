<head>
	<title>Edit</title>
</head>

<h1>User Edit Page</h1>

<%= form_for current_user do |f| %>
	<% if current_user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in current_user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p class="address_line_one">
    	<%= f.label :address_line_one %><br />
    	<%= f.text_field :address_line_one %>
  	</p>

	<p class="button"><%= f.submit "Update"%></p>
<% end %>