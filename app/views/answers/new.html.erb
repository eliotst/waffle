<head>
  <title>Answer the Question</title>
</head>

<h1>Answer the Question</h1>

<div class="row">
  <div class="span5 offset3">
    <%= form_for ([@question, @question.answers.build]) do |f| %>
      <%= render 'shared/question_error_messages' %>

      Title: <%= @question.label %><br />
      Question: <%= @question.text %><br />
      Previous Answer: <%= @answer.value %>

      <%= f.label :value, "New Answer:" %>
      <%= f.text_field :value %>

      <%= f.submit "Submit Answer", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "List of Current Questions", questions_path %>
  </div>
</div>