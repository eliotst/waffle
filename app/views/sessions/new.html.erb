<head>
  <title>Log in</title>
</head>

<h1>Log in</h1>

<div class="row">
  <div class="span5 offset3">
    <%= form_tag sessions_path do %>
  		<%= label_tag :email %>
  		<%= text_field_tag :email %>
  		<%= label_tag :password %>
  		<%= password_field_tag :password %>
    	<%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Forgotten password? <%= link_to "Reset password", new_password_reset_path %></p>
    <p>New user? <%= link_to "Sign up now!", sign_up_path %></p>
  </div>
</div>