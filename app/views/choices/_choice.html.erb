<% if choice.question == @question %>
	<%= link_to @question.label, question_choice_path(@question, choice) %> <br />
	<%= choice.value %> | 
	<% if current_user %>
	  <%= link_to 'Edit Answer Choice', edit_question_choice_path(@question, choice) %> |
	  <%= link_to 'Delete Answer Choice', question_choice_path(@question, choice), method: :delete, data: { confirm: 'Are you sure?'} %> <br/>
	<% end %>
<% end %>