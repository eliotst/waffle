  Title: <%= @question.label %><br />
  Question: <%= @question.text %><br />

  Which type of answer would you like to use?<br />
  <%= f.radio_button :value, "radio_button" %>
  <%= f.label "radio_button" %>
  <%= f.radio_button :value, "check_box" %>
  <%= f.label "check_box" %>
  <%= f.radio_button :value, "text_field" %>
  <%= f.label "text_field" %>
  <%= f.radio_button :value, "text_area" %>
  <%= f.label "text_area" %>
  <%= f.radio_button :value, "password_field" %>
  <%= f.label "password_field" %>
  <%= f.radio_button :value, "telephone_field" %>
  <%= f.label "telephone_field" %>
  <%= f.radio_button :value, "date_field" %>
  <%= f.label "date_field" %>
  <%= f.radio_button :value, "month_field" %>
  <%= f.label "month_field" %>
  <%= f.radio_button :value, "email_field" %>
  <%= f.label "email_field" %>
  <%= f.radio_button :value, "number_field" %>
  <%= f.label "number_field" %>
  <%= f.radio_button :value, "range_field" %>
  <%= f.label "range_field" %>
  <%= f.radio_button :value, "color_field" %>
  <%= f.label "color_field" %>
  <%= f.radio_button :value, "time_field" %>
  <%= f.label "time_field" %>
  <%= f.radio_button :value, "select" %>
  <%= f.label "select_field" %>

  <%= f.submit "Submit Choice", class: "btn btn-large btn-primary" %>
<% end %>