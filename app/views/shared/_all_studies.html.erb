<% if @studies.length == 0 %>
    There are no studies
<% else %>
<table class="table text-left">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @studies.each do |study| %>
            <tr>
                <td><%= link_to study.title, study %></td>
                <td>
                    <% if !current_user.studies.include?(study) %>
                      <%= link_to "Sign Up", new_participant_path(study_id: study.id) %>
                    <% else %>
                      None
                    <% end %>
                    <% if current_user.is_admin? %>
                      <%= link_to "Delete", study, method: :delete %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% end %>
