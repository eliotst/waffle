<div class="panel-header waffle-header">
    <h1>Study Details</h1>
</div>

<div class="panel-body">
    <p>Study: <strong><%= @study.title %></strong></p>
    <% if @current_participant.nil? %>
        <%= link_to "Sign Up", controller: :participant, action: :sign_up,
            study_id: @study.id %>
    <% else %>
        <p>Signed Up: <%= @current_participant.created_at %></p>
        <% if !@current_participant.next_schedule_entry.nil? %>
            <p>Next Questionnaire</p>
        <% end %>
        <% @study.questionnaires.each do |questionnaire| %>
            <p><%= link_to "Questionnaire", controller: :answer_sets,
                action: :new,
                id: nil,
                                            questionnaire_id: questionnaire.id %>
        <% end %>
    <% end %>
</div>
