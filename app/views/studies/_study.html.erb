<% if current_user %>
  Study: <strong><%= study.title %></strong><br />
  <ol>
    <% for questionnaire in study.questionnaires %>
      <li><i><%=h questionnaire.label %></i></li>
      <ol>
        <% for block in questionnaire.blocks %>
          <li><b><%=h block.label %></b></li>
            <ol>
              <% for question in block.questions %>
                <li><b><%=h question.label %></b></li>
                Question: <%=h question.text %>
                <ol>
                  <% if current_user.admin %>
                    <% for choice in question.choices %>
                      <li><i><%=h choice.value %></i></li>
                    <% end %>
                  <% elsif current_user %>
                    <% for answer in question.answers %>
                      <li><i><%=h answer.value %></i></li>
                    <% end %>
                  <% end %>
                </ol>
              <% end %>
            </ol>
        <% end %>
      </ol>
    <% end %>
  </ol>
  <%= link_to 'Edit Study', edit_study_path(study) %>
<% end %>
<% if current_user.admin? %>
  | <%= link_to 'Delete', study, method: :delete, data: { confirm: 'Are you sure?'} %><br/>
<% else %>
<br/>
<% end %><br />