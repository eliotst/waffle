<div class="panel-header waffle-header">
    <h1>All Studies</h1>
</div>

<div class="panel-body">
<table class="table text-left">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    <% @studies.each do |study| %>
        <tr>
            <td><%= link_to study.title, study %></td>
            <td>
                <% if !current_user.studies.include?(study) %>
                    <%= link_to "Sign Up", controller: :participant, action: :sign_up,
                        study_id: study.id %>
                <% else %>
                    None
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>
