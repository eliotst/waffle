<head>
  <title>Create a Question</title>
</head>

<h1>Create a Question</h1>

<div class="row">
  <div class="span5 offset3">
    <%= form_for @question do |f| %>
      <%= render 'shared/question_error_messages' %>

      <%= f.label :label %>
      <%= f.text_field :label %>

      <%= f.label :text %>
      <%= f.text_field :text %>
      <%= f.submit "Create question", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "List of Current Questions", questions_path %>
  </div>
</div>