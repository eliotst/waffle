<head>
	<title>Edit Question</title>
</head>

<h1>Update your Question</h1>

<div class="row">
	<div class="span6 offset3">
		
		<%= @answer.inspect %>
		<% if current_user.admin %>
			<%= form_for(@question) do |f| %>
				<%= render 'shared/question_error_messages' %>

				<%= f.label :label %>
				<%= f.text_field :label %>

				<%= f.label :text %>
				<%= f.text_field :text %>

				<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
			<% end %>
		<% elsif current_user.admin == false && current_user %>

	    <%= form_for ([@question, @question.answers.build]) do |f| %>
	      
	      <%= f.label :value, "New answer:" %>
	      <%= f.text_field :value %>
	      
	      <%= f.submit "Submit Answer", class: "btn btn-large btn-primary" %>
	    <% end %>
		<% end %>
	</div>
</div>

<%= render 'shared/logos' %>