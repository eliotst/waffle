<%= form_for @block do |f| %>
  <% if current_user.admin %>
    <p>
      <%= f.label :label %>
      <%= f.text_field :label %>
    </p>
    <%= f.fields_for :questions do |builder| %>
    	<%= render 'question_fields', :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "add Question", f, :questions %></p>
    <p><%= f.submit "Submit block", class: "btn btn-primary btn-large btn-block" %></p>
    <%= link_to "List of Current Blocks", blocks_path %> 
  <% else %>
    <p>
      <strong><%= @block.label %></strong>
      <ol>
        <% for question in @block.questions %>
          <li><%=h question.text %></li>
          <%= f.fields_for :questions do |builder| %>
            <%= render 'question_shows', :f => builder %>
          <% end %>
        <% end %> 
      </ol>
    </p>
  <% end %>
<% end %>
