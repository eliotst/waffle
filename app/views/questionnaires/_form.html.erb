<%= form_for @questionnaire do |f| %>
  <% if current_user.admin %>
    <p>
      <%= f.label :label %>
      <%= f.text_field :label %>
    </p>
    <%= f.fields_for :blocks do |builder| %>
      <%= render 'block_fields', :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Block", f, :blocks %></p>
    <p><%= f.submit "Submit Questionnaire", class: "btn btn-primary btn-large btn-block" %></p>
    <%= link_to "List of Current Questionnaires", questionnaires_path %> 
  <% else %>
    <p>
      <strong><%= @Questionnaire.label %></strong>
      <ol>
        <% for block in @questionnaire.blocks %>
          <li><%=h block.label %></li>
        <% end %> 
      </ol>
    </p>
  <% end %>
<% end %>
